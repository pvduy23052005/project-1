extends ../../layout/default.pug
include ../../mixins/box-alert.pug

block main
  h1.mb-4 Danh sách tài khoản

  +box-alert-success(5000)
  +box-alert-error(5000)

  .card.mb-3
    .card-header 
      .row
        .col-6.text-start  Danh Sách
        .col-6.text-end
          a.btn.btn-outline-success(href="/admin/accounts/create") + Thêm mới

    .card-body
      table.table.table-hover.table-sm
        thead
          tr
            th STT
            th Avatar
            th Họ tên
            th Phân quyền
            th Email
            th Trạng thái
            th Hành động
        tbody
          each item, index in accounts
            tr.mb-5
              td #{index + 1}
              td
                img(src=item.avatar, alt=item.fullName, width="100px" height="auto")
              td #{item.fullName}
              td #{item.role}
              td #{item.email}
              td
                if item.status == 'active'
                  a(href="#" class="badge text-bg-success"
                    change-status = `${item.status}-${item._id}`
                  ) Hoạt động
                else
                  a(href="#" class="badge text-bg-danger"
                  change-status = `${item.status}-${item._id}`
                  ) Không hoạt động
              td
                a(class="btn btn-warning btn-sm"
                href = `/admin/products/edit/${item._id}`
                button-edit
                ) <i class="fa-solid fa-pen-to-square"></i>
                button(class="btn btn-danger btn-sm ml-1"
                  data-id = item._id
                  button-delete
                  ) <i class="fa-solid fa-trash"></i>
                a(href=`/admin/products/detail/${item._id}`
                  class = "btn btn-secondary btn-sm "
                  ) <i class="fa-solid fa-circle-info"></i>