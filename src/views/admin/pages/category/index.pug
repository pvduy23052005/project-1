extends ../../layout/default.pug
include ../../mixins/box-alert.pug
include ../../mixins/table-tree.pug

block main 
  h1 Category 

  +box-alert-success(5000)
  +box-alert-error(5000)

  .card.mb-5.text-start
    .card-header.mb-2 
      .row
        .col-6 
           span Thông tin danh mục
        .col-6.text-end
          a(href="/admin/category/create" class="btn btn-outline-success") + Thêm mới
    .card-body
      table(
        class = "table table-hover table-sm"

      )
        thead
          tr
            th STT
            th Ảnh đại diện
            th Tiêu đề
            th Vị trí 
            th Trạng thái
            th Hành động
        tbody 
          +table-tree(categoryTree , 0 , 1)
