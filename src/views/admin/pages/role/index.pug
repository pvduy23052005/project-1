extends ../../layout/default.pug

block main 
  h1 role

  .card.mb-3 
    .card-header 
      .row
        .col-6
          span Danh sách nhóm quyền 
        .col-6.text-right 
          a(href="/admin/role/create" class="btn btn-outline-success" )
            <i class="fa-solid fa-plus"></i> Tạo mới
    .card-body
      table(
        class ="table table-hover table-sm")  
          thead 
            tr 
              th STT 
              th Nhóm quyền  
              th Mô tả ngắn 
              th Hành động
          tbody  
            if(roles.length > 0)
              each item , index in roles
                tr
                  td #{index + 1}
                  td #{item.title}
                  td #{item.description}
                  td 
                    a(
                      href=`/admin/roles/detail/${item.id}`
                      class = "btn btn-secondary"
                      class = "chinhSua"
                      ) chi tiet 
                    a(href=`/admin/roles/edit/${item.id}`
                      class = "btn btn-success"

                    ) Sua 
                    a(
                      href=`/admin/roles/delete/${item.id}`
                      class = "btn btn-danger"
                    ) Xoa  
            else 
              tr 
                td chua co nhom quyen
