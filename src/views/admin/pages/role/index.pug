extends ../../layout/default.pug

block main 
  h1 role


  .card.mb-3 
    .card-header 
      .row
        .col-6
          span Danh sách nhóm quyền 
        .col-6.text-right 
          a(href="/admin/role/create" class="btn btn-outline-success" )
            <i class="fa-solid fa-plus"></i> Tạo mới
    .card-body
      table(
        class ="table table-hover table-sm")  
          thead 
            tr 
              th STT 
              th Nhóm quyền  
              th Mô tả ngắn 
              th Hành động
          tbody  
            if(roles.length > 0)
              each item , index in roles
                tr
                  td #{index + 1}
                  td #{item.title}
                  td #{item.description}
                  td
                    a(class="btn btn-warning btn-sm"
                      href = `/admin/role/edit/${item._id}`
                      button-edit
                    ) <i class="fa-solid fa-pen-to-square"></i>
                    button(class="btn btn-danger btn-sm ml-1"
                      data-id = item._id
                      button-delete
                      ) <i class="fa-solid fa-trash"></i>
                    a(href=`/admin/role/detail/${item._id}`
                      class = "btn btn-secondary btn-sm "
                      ) <i class="fa-solid fa-circle-info"></i>
            else 
              tr 
                td chua co nhom quyen
