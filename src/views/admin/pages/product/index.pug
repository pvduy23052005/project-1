extends ../../layout/default.pug

block main 
  h1 Products

  table.table.table-hover.table-sm.table-proructs
    thead
      tr
        th STT
        th Hình ảnh
        th Tiêu đề
        th Giá
        th Trạng thái
        th Hành động
    tbody
      each item , index in products
        tr
          td #{index + 1}
          td
            img(
              src=item.thumbnail,
              alt=item.title,
              width="100px",
              height="auto"
            )
          td #{item.title}
          td #{item.price}$
          td
            if item.status == 'active'
              a(href="#" class="badge text-bg-success") Hoạt động
            else
              a(href="#" class="badge text-bg-danger") Không hoạt động
          td
            button(class="btn btn-warning btn-sm") Sửa
            button(class="btn btn-danger btn-sm ml-1") Xóa