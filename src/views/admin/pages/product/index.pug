extends ../../layout/default.pug
include ../../mixins/listButtonStatus.pug
include ../../mixins/formSearch.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/box-alert.pug

block main 
  +box-alert(5000)



  h1 Danh sach Sản phẩm

  .card.mb-3.text-start
    .card-header.mb-2 Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +listButtonStatus(listButtonStatus)
        .col-6 
          +formSearch(keyword)

  .card.mb-4
    .card-header
      +form-change-multi()
      a(href="/admin/products/create" class="btn btn-outline-success")  + Thêm mới

  table(
    class = "table table-hover table-sm"
    checkbox-all 
  )
    thead
      tr
        th 
          input(type="checkbox" name="checkAll")
        th STT
        th Hình ảnh
        th Tiêu đề
        th Giá
        th Trạng thái
        th Hành động
    tbody
      each item , index in products
        tr
          td 
            input(type="checkbox" name="id" value = item._id)
          td #{index + 1}
          td
            img(
              src=item.thumbnail,
              alt=item.title,
              width="100px",
              height="auto"
            )
          td #{item.title}
          td #{item.price}$
          td
            if item.status == 'active'
              a(href="#" class="badge text-bg-success"
                change-status = `${item.status}-${item._id}`
              ) Hoạt động
            else
              a(href="#" class="badge text-bg-danger"
              change-status = `${item.status}-${item._id}`
              ) Không hoạt động
          td
            button(class="btn btn-warning btn-sm") Sửa
            button(class="btn btn-danger btn-sm ml-1"
              data-id = item._id
              button-delete
            ) Xóa

  +pagination(pagination)

  form(
    action= ""
    method="POST"
    id = "form-change-status"
    data-path = `/admin/products/change-status`
    ) 

  form(
    action= ""
    method="POST"
    id = "form-delete"
    data-path = `/admin/products/delete`
    ) 