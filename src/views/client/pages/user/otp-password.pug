extends ../../layout/default.pug 
include ../../mixins/box-alert.pug
include ../../mixins/box-head.pug

block main 
  +box-alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-8
        h1.text-center Xác thực otp  
        form(action=`/user/password/otp` method="POST")
          .form-group.mb-4
            label(for="email") Email:
            input#email.form-control(
              type="email", 
              name="email", 
              value = email 
              required
            )

          .form-group.mb-4
            label(for="email") Enter your otp: 
            input.form-control(
              type="text", 
              name="otp", 
              required
            )

          .form-group
            button.btn.btn-primary.btn-block(type="submit")
              | Xác nhận